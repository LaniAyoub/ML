# Production Environment Variables
# Copy this file to .env and update with your production values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
LOG_LEVEL=info

# Model Configuration
MODEL_PATH=/app/models/final_churn_prediction_pipeline.pkl
MODEL_CACHE_ENABLED=true

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production
API_KEY_ENABLED=true
API_KEY=your-secure-api-key-here
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database (for production logging & monitoring)
DATABASE_URL=postgresql://user:password@db:5432/churn_db
ENABLE_DB_LOGGING=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Monitoring
PROMETHEUS_ENABLED=true
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ENABLE_PERFORMANCE_TRACKING=true

# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=change-this-secure-password
GF_SERVER_ROOT_URL=https://grafana.yourdomain.com

# Frontend
FRONTEND_PORT=80
FRONTEND_API_URL=https://api.yourdomain.com

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/fullchain.pem
SSL_KEY_PATH=/etc/ssl/private/privkey.pem

# Docker
COMPOSE_PROJECT_NAME=churn_prediction_prod
RESTART_POLICY=always

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
